@model System.Data.DataTable
@{
    ViewBag.Title = "الحركة اليومية للمشتريات";
}
@{if (Convert.ToInt32(Session["Role"]) == 1)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 2)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 3)
{
    Layout = "~/Views/Shared/_LayPurMa.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    Layout = "~/Views/Shared/_LayPurAcc.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 5)
{
    Layout = "~/Views/Shared/_LaySaMa.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 6)
{
    Layout = "~/Views/Shared/_LaySaAcc.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 7)
{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}
}
<h2>الحركة اليومية للمشتريات</h2>
<a href="@Url.Action("SaveProduct","Product")">تعريف صنف</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>المخزن</th>
        <th>الصنف</th>
        <th>الوحده</th>
        <th>المورد</th>
        <th>الكميه</th>
        <th>سعر الوحده</th>
        <th>الإجمالي</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>
                @Model.Rows[i][0]
            </td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>
                <a class="LinkItem" href="@Url.Action("EditInvoicePurchase", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][3]</a>
            </td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
        </tr>
    }
</table>


