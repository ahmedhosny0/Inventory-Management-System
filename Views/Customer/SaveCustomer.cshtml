@model AKSoft.Models.CustomerCode
@{ViewBag.Title = "تعريف عميل";}
@{if (Convert.ToInt32(Session["Role"]) == 1)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 2)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 3)
{
    Layout = "~/Views/Shared/_LayPurMa.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    Layout = "~/Views/Shared/_LayPurAcc.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 5)
{
    Layout = "~/Views/Shared/_LaySaMa.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 6)
{
    Layout = "~/Views/Shared/_LaySaAcc.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 7)
{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>تعريف عميل</title>
    <link rel="stylesheet" href="~/Css/style.css" />
    <script src="~/Scripts/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"> </script>
</head>
<body>
    <div style="direction:rtl;">
        <h1 class="head">تعريف عميل</h1>
    </div>
    @if (TempData["Al"] != null)
    {
        <script>
            swal("تم الحفظ بنجاح", " ", "success");
        </script>
        <strong style="color:green">تم الحفظ بفضل الله </strong>@TempData["Al"]
    }
    @using (Html.BeginForm("SaveCustomer", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <ul class="Elements">
        <li class="">
            <label class="Lab">الكود</label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "Txt drop", @placeholder = "", @Value = @ViewBag.MaxCode } })
        </li>
        <li class="">
            <label class="Lab">الإسم عربي</label>
            @Html.EditorFor(model => model.ArabicName, new { htmlAttributes = new { @class = "Txt", @placeholder = "ArabicName", @required = "required" } }) @*Required TextBox*@
            <label class="Lab">الإسم انجليزي</label>
            @Html.EditorFor(model => model.EnglishName, new { htmlAttributes = new { @class = "Txt", @placeholder = "EnglishName" } })
        </li>

        <li class="">
            <label class="Lab">اللقب</label>
            @Html.EditorFor(model => model.DescName, new { htmlAttributes = new { @class = "Txt", @placeholder = "Title" } })
        </li>
        <li class="">
            <label class="Lab">ملاحظات</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
        </li>
        <li class="">
            <label class="Lab">عنوان 1</label>
            @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
            <label class="Lab">عنوان 2</label>
            @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
        </li>
        <li class="">
            <label class="Lab">تليفون 1</label>
            @Html.EditorFor(model => model.Telephone1, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
            <label class="Lab">تليفون 2</label>
            @Html.EditorFor(model => model.Telephone2, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
            <label class="Lab">تليفون 3</label>
            @Html.EditorFor(model => model.Telephone3, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
        </li>
        <li class="">
            <label class="Lab">الدوله</label>
            @Html.DropDownListFor(model => model.CountrySerial, ViewBag.DepartmentList1 as SelectList, "--select--", new { @class = "Txt drop", @required = "required" }) @*Required DropDownList *@
            <label class="Lab">المدينه</label>
            @Html.DropDownListFor(model => model.TownSerial, ViewBag.DepartmentList2 as SelectList, "--select--", new { @class = "Txt drop", @required = "required" }) @*Required DropDownList *@
        </li>
        <li class="">
            <label class="Lab">الإيميل</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
        </li>
        <li class="">
            <label class="Lab">الموقع الإلكتروني</label>
            @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
        </li>
        <li class="">
            <button class="save">حفظ</button>
            <a href="@Url.Action("DisplayCustomers", "Customer")"><input style="background-color:#0bf765" class="save" value="عرض الكل" /></a>
        </li>
    </ul>
    }

</body>
</html>
