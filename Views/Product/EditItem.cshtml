@model AKSoft.Models.ItemCode
@{
    ViewBag.Title = "EditItem";
}
@{if (Convert.ToInt32(Session["Role"]) == 1)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 2)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 3)
{
    Layout = "~/Views/Shared/_LayPurMa.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    Layout = "~/Views/Shared/_LayPurAcc.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 5)
{
    Layout = "~/Views/Shared/_LaySaMa.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 6)
{
    Layout = "~/Views/Shared/_LaySaAcc.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 7)
{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}
}
<h2>EditItem</h2>
<div>
    @Html.ActionLink("العودة للقائمة السابقة", "DisplayItems")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() 


        <ul class="Elements" style="direction:rtl;">
            <li style="display:none">
                <label class="Lab">السريال</label>
                @Html.EditorFor(model => model.Serial, new { htmlAttributes = new { @class = "Txt", @id = "name", @placeholder = "" } }) @*Required TextBox*@
            </li>
            <li class="">
                <label class="Lab">الكود</label>
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "Txt drop", @placeholder = "" } })
            </li>
            <li>
                <label class="Lab dr">الوحدة</label>
                @Html.DropDownListFor(model => model.Unit1, ViewBag.DepartmentList1 as SelectList, "--select--", new { @class = "Txt drop", @required = "required" })
                <label class="Lab dr">مجموعة الصنف</label>
                @Html.DropDownListFor(model => model.SerialGroup, ViewBag.DepartmentList3 as SelectList, "--select--", new { @class = "Txt drop", @required = "required" })
            </li>
            <li class="">
                <label class="Lab">الإسم عربي</label>
                @Html.EditorFor(model => model.ArabicName, new { htmlAttributes = new { @class = "Txt", @placeholder = "ArabicName", @required = "required" } }) @*Required TextBox*@
            </li>

            <li class="">
                <label class="Lab">الإسم إنجليزي</label>
                @Html.EditorFor(model => model.EnglishName, new { htmlAttributes = new { @class = "Txt", @placeholder = "EnglishName" } })
            </li>

            <li class="">
                <label class="Lab">الإسم المختصر</label>
                @Html.EditorFor(model => model.DescName, new { htmlAttributes = new { @class = "Txt", @placeholder = "Title" } })
            </li>
            <li class="">
                <label class="Lab">الوصف</label>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "Txt", @placeholder = "Description" } })
            </li>
            <li class="">
                <label class="Lab">سعر الشراء</label>
                @Html.EditorFor(model => model.PricePurchase1Unit1, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
            </li>
            <li class="">
                <label class="Lab">سعر البيع</label>
                @Html.EditorFor(model => model.PriceSale1Unit1, new { htmlAttributes = new { @class = "Txt", @placeholder = "", @required = "required" } })
            </li>
            @*<div class="">
                    <label class="Lab">Quantity</label>
                    @Html.EditorFor(model => model.Counts, new { htmlAttributes = new { @class = "Txt", @placeholder = "" } })
                </div>*@
            <li class="">
                <button class="save">تعديل</button>
            </li>
        </ul>
        }
