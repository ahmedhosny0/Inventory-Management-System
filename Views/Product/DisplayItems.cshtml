<h2>الأصناف المُسجلة</h2>
<a href="@Url.Action("SaveProduct","Product")">تعريف صنف</a>
<table class="table table-bordered table-striped">
    <tr>
        <th style="display:none">السريال</th>
        <th>الكود</th>
        <th>الإسم عربي</th>
        <th>ملاحظات/ الوصف</th>
        <th>الوحدة</th>
        <th>التصنيف</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td style="display:none">@Model.Rows[i][0]</td>
            <td><a href="@Url.Action("EditItem", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][1]</a></td>
            <td><a class="LinkItem" href="@Url.Action("EditItem", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][2]</a></td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>            <td>
                <a href="@Url.Action("EditItem", "Product", new { @id = @Model.Rows[i][0] })">تعديل</a> --
                <a href="@Url.Action("DeleteItem", "Product", new {@id=@Model.Rows[i][0] })">حذف</a>
            </td>
        </tr>
    }
</table>


